# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Option 1: Neon Database (Recommended for production)
DATABASE_URL=postgresql://[user]:[password]@[host]/[dbname]?sslmode=require

# Option 2: Individual Database Variables (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cronicas_civilizacion
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# Database Type (auto-detected, but can be forced)
DATABASE_TYPE=postgresql

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Game Configuration
MAX_PLAYERS=8
MAP_SIZE=20
TURN_TIMEOUT=300000 